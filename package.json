{
  "name": "homeassistant",
  "private": true,
  "version": "0.10.0",
  "type": "module",
  "main": "dist/index.js",
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "dev": "deskthing dev --vite",
    "dev:vite": "vite",
    "dev:configui": "vite --config vite.configui.config.ts",
    "build": "vite build && pnpm run build-configui && pnpm run build-server",
    "build-configui": "vite build --config vite.configui.config.ts",
    "build-server": "esbuild server/index.ts --bundle --platform=node --outdir=dist/",
    "package": "deskthing package",
    "setup": "node setup.js",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@deskthing/client": "^0.11.2",
    "@deskthing/server": "^0.11.6",
    "@deskthing/types": "^0.11.18",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hono/node-server": "^1.8.0",
    "@mdi/js": "^7.4.47",
    "@mdi/react": "^1.6.1",
    "@statelyai/inspect": "^0.4.0",
    "@types/ws": "^8.5.13",
    "@xstate/react": "^5.0.0",
    "class-variance-authority": "^0.7.1",
    "core-js": "^3.47.0",
    "home-assistant-js-websocket": "^9.4.0",
    "hono": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsm": "^2.3.0",
    "ws": "^8.18.0",
    "xstate": "^5.19.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@deskthing/cli": "^0.11.15",
    "@eslint/js": "^9.9.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-legacy": "^5.4.2",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "esbuild": "^0.19.2",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1"
  }
}
